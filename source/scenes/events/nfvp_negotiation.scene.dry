title: Negotiations with <span style="color: #DCCA4A;">**[+ ddp_name +]**</span>.
view-if: year == 1929 and month >= 9 and ddp_exist and supported_front_1929
on-arrival: {!
Q.nfvp_formation_points = 0;
if (Q.ddp_relation >= 65) {
    Q.nfvp_formation_points += 1;
    Q.ddp_right += 1;
}
if (Q.ddp_relation < 50) {
    Q.nfvp_formation_points -= 1;
    Q.ddp_right -= 1;
}
if (Q.ddp_right > (Q.ddp_left + 2)) {
    Q.nfvp_formation_points += 1;
}
if (Q.dvp_reform) {
    Q.nfvp_formation_points += 1;
}

if (((Q.nationalist_strength + Q.industrialist_strength) >= (Q.liberal_strength + Q.labor_strength)) || Q.dvp_ideology = "Right") {
    Q.nfvp_formation_points -= 5;
}
!}
max-visits: 1
tags: event
new-page: true

