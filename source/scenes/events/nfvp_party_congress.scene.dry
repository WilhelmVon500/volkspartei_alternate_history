on-arrival: {!
Q.total_influence = 0;
Q.progressive_influence = 0;
Q.democratic_influence = 0;
Q.liberal_influence = 0;
Q.labor_influence = 0;
Q.industrialist_influence = 0;
Q.peoples_conservative_influence = 0;
Q.special_interest_influence = 0;

Q.vnr_influence = 0;
Q.social_catholics_influence = 0;
Q.christian_socials_influence = 0;
Q.dbp_influence = 0;
Q.wp_influence = 0;
Q.cnblp_influence = 0;



if (Q.progressives_dvp) {
    Q.total_influence = parseFloat((Q.total_influence + Q.progressive_strength).toFixed(1))
}
if (Q.democrats_dvp) {
    Q.total_influence = parseFloat((Q.total_influence + Q.democratic_strength).toFixed(1))
}
if (Q.liberals_dvp) {
    Q.total_influence = parseFloat((Q.total_influence + Q.liberal_strength).toFixed(1))
}
if (Q.labor_dvp) {
    Q.total_influence = parseFloat((Q.total_influence + Q.labor_strength).toFixed(1))
}
if (Q.industrialists_dvp) {
    Q.total_influence = parseFloat((Q.total_influence + Q.industrialist_strength).toFixed(1))
}
if (Q.peoples_conservatives_dvp) {
    Q.total_influence = parseFloat((Q.total_influence + Q.peoples_conservative_strength).toFixed(1))
}

if (Q.vnr_dvp) {
    Q.total_influence = parseFloat((Q.total_influence + (Q.democratic_strength+Q.liberal_strength)*0.02).toFixed(1))
}
if (Q.social_catholics_dvp) {
    Q.total_influence = parseFloat((Q.total_influence + Q.catholics_dvp*(Q.progressive_strength+Q.labor_strength)*0.002).toFixed(1))
}
if (Q.christian_socials_dvp) {
    Q.total_influence = parseFloat((Q.total_influence + Q.workers_dvp*(Q.labor_strength+Q.peoples_conservative_strength)*0.002).toFixed(1))
}
if (Q.special_interest_dvp) {
    Q.total_influence = parseFloat((Q.total_influence + Q.special_interest_strength).toFixed(1))
    Q.total_special_interest = 0;
    if (Q.dbp_dvp) {
        Q.dbp_share = parseFloat((Q.rural_dvp*(Q.progressive_strength + Q.democratic_strength + Q.liberal_strength)*0.05).toFixed(1))
        Q.total_special_interest += Q.dbp_share
    }
    if (Q.wp_dvp) {
        Q.wp_share = parseFloat((Q.new_middle_dvp + Q.old_middle_dvp).toFixed(1))
        Q.total_special_interest += Q.wp_share
    }
    if (Q.cnblp_dvp) {
        Q.cnblp_share = parseFloat((Q.rural_dvp*(Q.industrialist_strength + Q.peoples_conservative_strength)*0.05).toFixed(1))
        Q.total_special_interest += Q.cnblp_share
    }
}



if (Q.progressives_dvp) Q.progressive_influence = parseFloat((Q.progressive_strength/Q.total_influence*100).toFixed(1))
if (Q.democrats_dvp) Q.democratic_influence = parseFloat((Q.democratic_strength/Q.total_influence*100).toFixed(1))
if (Q.liberals_dvp) Q.liberal_influence = parseFloat((Q.liberal_strength/Q.total_influence*100).toFixed(1))
if (Q.labor_dvp) Q.labor_influence = parseFloat((Q.labor_strength/Q.total_influence*100).toFixed(1))
if (Q.industrialists_dvp) Q.industrialist_influence = parseFloat((Q.industrialist_strength/Q.total_influence*100).toFixed(1))
if (Q.peoples_conservatives_dvp) Q.peoples_conservative_influence = parseFloat((Q.peoples_conservative_strength/Q.total_influence*100).toFixed(1))

if (Q.social_catholics_dvp) Q.social_catholics_influence = parseFloat((Q.catholics_dvp*(Q.progressive_strength+Q.labor_strength)*0.002/Q.total_influence*100).toFixed(1))
if (Q.christian_socials_dvp) Q.christian_socials_influence = parseFloat((Q.workers_dvp*(Q.labor_strength+Q.peoples_conservative_strength)*0.002/Q.total_influence*100).toFixed(1))
if (Q.vnr_dvp) Q.vnr_influence = parseFloat(((Q.democratic_strength+Q.liberal_strength)*0.02/Q.total_influence*100).toFixed(1))
if (Q.dbp_dvp) Q.dbp_influence = parseFloat((Q.special_interest_strength*(Q.dbp_share/Q.total_special_interest)/Q.total_influence*100).toFixed(1))
if (Q.wp_dvp) Q.wp_influence = parseFloat((Q.special_interest_strength*(Q.wp_share/Q.total_special_interest)/Q.total_influence*100).toFixed(1))
if (Q.cnblp_dvp) Q.cnblp_influence = parseFloat((Q.special_interest_strength*(Q.cnblp_share/Q.total_special_interest)/Q.total_influence*100).toFixed(1))
!}
